<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Mentorship req</th>
      <th>Resources req</th>
      <th>Services req</th>
      <th>Published</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.user %></td>
        <td><%= project.title %></td>
        <td><%= project.summary %></td>
        <td><%= project.mentorship_req %></td>
        <td><%= project.resources_req %></td>
        <td><%= project.services_req %></td>
        <td><%= project.published %></td>
        <td><%= project.approved %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

